import numpy as np


def suffle_and_split(data , test_ratio):
    np.random.seed(42) #this is to avoid resuffling when restarted
    shuffled_incices = np.random.permutation(len(data))
    test_size_set = int(len(data) * test_ratio)
    test_indicies = shuffled_incices[:test_size_set]
    train_indicies = shuffled_incices[test_size_set:]
    return data.iloc [train_indicies] , data.iloc[test_indicies]



train , test = suffle_and_split(df, 0.2)


